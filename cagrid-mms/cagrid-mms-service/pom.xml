<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cagrid</groupId>
		<artifactId>cagrid-mms</artifactId>
		<version>2.1.0-SNAPSHOT</version>
	</parent>
	<artifactId>cagrid-mms-service</artifactId>
	<packaging>bundle</packaging>
	<name>caGrid MMS Service</name>

	<properties>
		<db.name>mms</db.name>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Embed-Dependency>*;scope=compile|runtime|system;artifactId=!spring*|aop*|cagrid-metadata-model|cagrid-mms-api|ws-*|wsrf-*</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
						<DynamicImport-Package>*</DynamicImport-Package>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>gov.nih.nci.system.client.proxy,
						gov.nih.nci.system.applicationservice,
						org.acegisecurity.context.httpinvoker,
						gov.nih.nci.system.query.cql,
						gov.nih.nci.system.query.hibernate,
						org.acegisecurity.providers.rcp
						</Export-Package>
						<Private-Package>
							org.cagrid.mms.service.impl,
							org.cagrid.mms.service.impl.cadsr
						</Private-Package>
						<Import-Package>
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>src/main/resources/application-config-client.xml</file>
									<type>xml</type>
									<classifier>applicationConfigClient</classifier>
								</artifact>
								<artifact>
									<file>src/main/resources/serviceMetadata.xml</file>
									<type>xml</type>
									<classifier>serviceMetadata</classifier>
								</artifact>
								<artifact>
									<file>src/main/resources/serviceSecurityMetadata.xml</file>
									<type>xml</type>
									<classifier>serviceSecurityMetadata</classifier>
								</artifact>
								</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>

	</build>

	<pluginRepositories>
		<pluginRepository>
			<id>ossrh</id>
			<name>Sonatype OSS Repository</name>
			<url>http://oss.sonatype.org/content/groups/public</url>
			<layout>default</layout>
		</pluginRepository>
	</pluginRepositories>

