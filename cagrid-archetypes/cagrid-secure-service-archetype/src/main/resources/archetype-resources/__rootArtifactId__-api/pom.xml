<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>${groupId}</groupId>
		<artifactId>${rootArtifactId}</artifactId>
		<version>${version}</version>
	</parent>
	<artifactId>${artifactId}</artifactId>
	<packaging>bundle</packaging>
	<name>${rootArtifactId} API</name>

	<properties>
        <!-- TODO: edit this -->
		<${artifactId}.wsdl.path>schema/${serviceName}_service.wsdl</${artifactId}.wsdl.path>
	</properties>

	<profiles>
		<profile>
			<id>wsdl2java</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-codegen-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-sources</id>
								<phase>generate-sources</phase>
								<configuration>
									<wsdlOptions>
										<wsdlOption>
											<wsdl>work/${${artifactId}.wsdl.path}</wsdl>
											<wsdlLocation>/${${artifactId}.wsdl.path}</wsdlLocation>
											<extraargs>
												<extraarg>-autoNameResolution</extraarg>
												<extraarg>-verbose</extraarg>
												<extraarg>-impl</extraarg>
												<extraarg>-client</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>${serviceNamespace}/service=${package}.wsrf.service</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>${serviceNamespace}=${package}.wsrf.stubs</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>${serviceNamespace}/types=${package}.types</extraarg>
                                                <extraarg>-p</extraarg>
                                                <extraarg>${serviceNamespace}/domain=${package}.model</extraarg>
                                                <!-- Exclusions -->
												<extraarg>-nexclude</extraarg>
												<extraarg>http://authentication.gaards.cagrid.org/AuthenticationService=org.cagrid.gaards.authentication</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://gaards.cagrid.org/authentication-faults=org.cagrid.gaards.authentication.faults</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://gaards.cagrid.org/authentication/lockout=org.cagrid.gaards.authentication.lockout</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://cagrid.nci.nih.gov/1/authentication-service=org.cagrid.gaards.authentication.service</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://authentication.gaards.cagrid.org/AuthenticationService/types=org.cagrid.gaards.authentication.types</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://security.introduce.cagrid.nci.nih.gov/ServiceSecurity=org.cagrid.gaards.security.servicesecurity</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>urn:oasis:names:tc:SAML:1.0:assertion=org.oasis.names.tc.saml.assertion</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata=gov.nih.nci.cagrid.metadata</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.common=gov.nih.nci.cagrid.metadata.common</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.security=gov.nih.nci.cagrid.metadata.security</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.service=gov.nih.nci.cagrid.metadata.service</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://schemas.xmlsoap.org/ws/2004/03/addressing</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://www.w3.org/2000/09/xmldsig#</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-BaseFaults-1.2-draft-01.xsd</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01.wsdl</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsn/2004/06/wsn-WS-BaseNotification-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceLifetime-1.2-draft-01</extraarg>
                                                <extraarg>-nexclude</extraarg>
                                                <extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceLifetime-1.2-draft-01.wsdl</extraarg>
											</extraargs>
											<bindingFiles>
												<bindingFile>work/schema/jaxb-binding.xjb</bindingFile>
											</bindingFiles>
										</wsdlOption>
									</wsdlOptions>
								</configuration>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<resources>
			<resource>
				<directory>work/schema</directory>
				<excludes>
					<exclude>jaxb-binding.xjb</exclude>
				</excludes>
				<targetPath>schema</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>work</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-schema</id>
						<phase>initialize</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>work/schema</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources/schema</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>initialize</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>org.cagrid.wsrf</groupId>
									<artifactId>ws-model</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd</includes>
								</artifactItem>
								<artifactItem>
									<groupId>org.cagrid.wsrf</groupId>
									<artifactId>wsrf-faults-api</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
                                <artifactItem>
                                    <groupId>org.cagrid.wsrf</groupId>
                                    <artifactId>wsrf-notification-api</artifactId>
                                    <version>${wsrf.version}</version>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>work</outputDirectory>
                                    <includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
                                </artifactItem>
								<artifactItem>
									<groupId>org.cagrid.wsrf</groupId>
									<artifactId>wsrf-properties-api</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
								<artifactItem>
									<groupId>org.cagrid</groupId>
									<artifactId>cagrid-metadata-model</artifactId>
									<version>${cagrid.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
								<artifactItem>
									<groupId>org.cagrid</groupId>
									<artifactId>cagrid-gaards-api</artifactId>
									<version>${cagrid.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>schema.${package},
							${package},
                            ${package}.service,
                            ${package}.service.exception,
                            ${package}.model,
                            ${package}.types,
                            ${package}.wsrf.service,
                            ${package}.wsrf.stubs</Export-Package>
						<Import-Package>*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
        <dependency>
            <groupId>org.cagrid</groupId>
            <artifactId>cagrid-gaards-api</artifactId>
        </dependency>
		<dependency>
			<groupId>org.cagrid</groupId>
			<artifactId>cagrid-metadata-model</artifactId>
		</dependency>
		<dependency>
			<groupId>org.cagrid</groupId>
			<artifactId>cagrid-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.cagrid.wsrf</groupId>
			<artifactId>ws-model</artifactId>
		</dependency>
        <dependency>
            <groupId>org.cagrid.wsrf</groupId>
            <artifactId>wsrf-lifetime-api</artifactId>
        </dependency>
		<dependency>
			<groupId>org.cagrid.wsrf</groupId>
			<artifactId>wsrf-faults-api</artifactId>
		</dependency>
        <dependency>
            <groupId>org.cagrid.wsrf</groupId>
            <artifactId>wsrf-notification-api</artifactId>
        </dependency>
		<dependency>
			<groupId>org.cagrid.wsrf</groupId>
			<artifactId>wsrf-properties-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>
</project>
