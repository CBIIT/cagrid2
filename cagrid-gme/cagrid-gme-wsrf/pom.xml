<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cagrid</groupId>
		<artifactId>cagrid-gme</artifactId>
		<version>2.1.1-SNAPSHOT</version>
	</parent>
	<artifactId>cagrid-gme-wsrf</artifactId>
	<packaging>bundle</packaging>
	<name>caGrid GME WSRF SOAP Endpoint</name>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package />
						<Private-Package>org.cagrid.gme.service.wsrf</Private-Package>
						<Import-Package>
							schema.org.cagrid.gme,
							org.cagrid.security.ssl.proxy.trust,
							META-INF.cxf,
							META-INF.cxf.osgi,
							org.apache.cxf.bus.spring,
							org.apache.cxf.jaxws.spi,
							*
						</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>src/main/resources/serviceMetadata.xml</file>
									<type>xml</type>
									<classifier>serviceMetadata</classifier>
								</artifact>
								<artifact>
									<file>src/main/resources/registration.xml</file>
									<type>xml</type>
									<classifier>registration</classifier>
								</artifact>
                                <artifact>
                                    <file>src/main/resources/serviceSecurityMetadata.xml</file>
                                    <type>xml</type>
                                    <classifier>serviceSecurityMetadata</classifier>
                                </artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-gme-api</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-core</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-proxy-trust</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-service-registration-api</artifactId>
		</dependency>
	</dependencies>
</project>
