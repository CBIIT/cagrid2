<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cagrid</groupId>
		<artifactId>cagrid-gridgrouper</artifactId>
		<version>2.0.2-SNAPSHOT</version>
	</parent>
	<artifactId>cagrid-gridgrouper-api</artifactId>
	<packaging>bundle</packaging>
	<name>caGrid GridGrouper API</name>
	<properties>
		<wsdl.path>schema/org/cagrid/gridgrouper/GridGrouper_service.wsdl</wsdl.path>
	</properties>
	<profiles>
		<profile>
			<id>wsdl2java</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.cxf</groupId>
						<artifactId>cxf-codegen-plugin</artifactId>
						<executions>
							<execution>
								<id>generate-sources</id>
								<phase>generate-sources</phase>
								<configuration>
									<wsdlOptions>
										<wsdlOption>
											<wsdl>work/${wsdl.path}</wsdl>
											<wsdlLocation>/${wsdl.path}</wsdlLocation>
											<extraargs>
												<extraarg>-autoNameResolution</extraarg>
												<extraarg>-verbose</extraarg>
												<extraarg>-impl</extraarg>
												<extraarg>-client</extraarg>
												<extraarg>-p</extraarg>
												<extraarg>http://cagrid.nci.nih.gov/1/GridGrouper=org.cagrid.gridgrouper.model</extraarg>
												<extraarg>-p</extraarg>
												<extraarg>http://cagrid.nci.nih.gov/GridGrouper=org.cagrid.gridgrouper.wsrf.stubs</extraarg>
												<extraargs>-p</extraargs>
												<extraarg>http://cagrid.nci.nih.gov/GridGrouper/types=org.cagrid.gridgrouper.types</extraarg>
												<extraargs>-p</extraargs>
												<extraarg>http://cagrid.nci.nih.gov/GridGrouper/service=org.cagrid.gridgrouper.wsrf.service</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://security.introduce.cagrid.nci.nih.gov/ServiceSecurity=org.cagrid.gaards.security.servicesecurity</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>urn:oasis:names:tc:SAML:1.0:assertion=org.oasis.names.tc.saml.assertion</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata=gov.nih.nci.cagrid.metadata</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.common=gov.nih.nci.cagrid.metadata.common</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.security=gov.nih.nci.cagrid.metadata.security</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>gme://caGrid.caBIG/1.0/gov.nih.nci.cagrid.metadata.service=gov.nih.nci.cagrid.metadata.service</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://schemas.xmlsoap.org/ws/2004/03/addressing</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://www.w3.org/2000/09/xmldsig#</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-BaseFaults-1.2-draft-01.xsd</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01.xsd</extraarg>
												<extraarg>-nexclude</extraarg>
												<extraarg>http://docs.oasis-open.org/wsrf/2004/06/wsrf-WS-ResourceProperties-1.2-draft-01.wsdl</extraarg>
											</extraargs>
											<bindingFiles>
												<bindingFile>work/schema/jaxb-binding.xjb</bindingFile>
											</bindingFiles>
										</wsdlOption>
									</wsdlOptions>
								</configuration>
								<goals>
									<goal>wsdl2java</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<resources>
			<resource>
				<directory>work/schema</directory>
				<excludes>
					<exclude>jaxb-binding.xjb</exclude>
				</excludes>
				<targetPath>schema</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<configuration>
					<filesets>
						<fileset>
							<directory>work</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-schema</id>
						<phase>initialize</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>work/schema</outputDirectory>
							<resources>
								<resource>
									<directory>src/main/resources/schema</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>unpack</id>
						<phase>initialize</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>${wsrf.group}</groupId>
									<artifactId>ws-model</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd</includes>
								</artifactItem>
								<artifactItem>
									<groupId>${wsrf.group}</groupId>
									<artifactId>wsrf-faults-api</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
								<artifactItem>
									<groupId>${wsrf.group}</groupId>
									<artifactId>wsrf-properties-api</artifactId>
									<version>${wsrf.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>cagrid-metadata-model</artifactId>
									<version>${project.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
								<artifactItem>
									<groupId>${project.groupId}</groupId>
									<artifactId>cagrid-gaards-api</artifactId>
									<version>${project.version}</version>
									<overWrite>true</overWrite>
									<outputDirectory>work</outputDirectory>
									<includes>schema/**/*.xsd,schema/**/*.wsdl</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package>
                            schema.org.cagrid.gridgrouper,
                            org.cagrid.gridgrouper.client,
                            org.cagrid.gridgrouper.model,
                            org.cagrid.gridgrouper.service,
                            org.cagrid.gridgrouper.service.exception,
                            org.cagrid.gridgrouper.types,
                            org.cagrid.gridgrouper.wsrf.service,
                            org.cagrid.gridgrouper.wsrf.stubs
                        </Export-Package>
                        <!--<Import-Package>
							schema.org.cagrid.dorian, org.cagrid.dorian, org.cagrid.dorian.common, org.cagrid.dorian.idp, 
							org.cagrid.dorian.ifs, org.cagrid.dorian.policy, org.cagrid.dorian.service, 
							org.cagrid.dorian.types, * </Import-Package> -->
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-gaards-api</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-metadata-model</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>cagrid-core</artifactId>
		</dependency>
		<dependency>
			<groupId>${wsrf.group}</groupId>
			<artifactId>ws-model</artifactId>
		</dependency>
		<dependency>
			<groupId>${wsrf.group}</groupId>
			<artifactId>wsrf-faults-api</artifactId>
		</dependency>
		<dependency>
			<groupId>${wsrf.group}</groupId>
			<artifactId>wsrf-properties-api</artifactId>
		</dependency>
		<dependency>
			<groupId>commons-dbcp</groupId>
			<artifactId>commons-dbcp</artifactId>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
		</dependency>
	</dependencies>
</project>
