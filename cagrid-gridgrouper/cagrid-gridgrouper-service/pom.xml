<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cagrid</groupId>
		<artifactId>cagrid-gridgrouper</artifactId>
		<version>2.0.2</version>
	</parent>
	<artifactId>cagrid-gridgrouper-service</artifactId>
	<packaging>bundle</packaging>
	<name>caGrid GridGrouper Service</name>

	<properties>
		<db.name>grouper</db.name>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sql-maven-plugin</artifactId>
				<version>1.5</version>
				<configuration>
					<driver>com.mysql.jdbc.Driver</driver>
					<url>jdbc:mysql://localhost:3306</url>
					<username>root</username>
					<password />
					<skip>${skipTests}</skip>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>com.mysql.jdbc</groupId>
						<artifactId>com.springsource.com.mysql.jdbc</artifactId>
						<version>5.1.6</version>
					</dependency>
				</dependencies>
				<executions>
					<execution>
						<id>drop-db-before-test</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<sqlCommand>drop database if exists ${db.name}</sqlCommand>
						</configuration>
					</execution>
					<execution>
						<id>create-db</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<sqlCommand>create database ${db.name}</sqlCommand>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
						<Export-Package />
						<Private-Package>
							org.cagrid.gridgrouper.service.impl,
                            org.cagrid.gridgrouper.service.impl.subject,
                            org.cagrid.gridgrouper.service.impl.util,
                            org.cagrid.gridgrouper.service.impl.tools
						</Private-Package>
						<Import-Package>
                            !org.apache.commons.cli,
                            edu.internet2.middleware*,
                            *
                        </Import-Package>
					</instructions>
				</configuration>
			</plugin>
			
				<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>src/main/resources/serviceMetadata.xml</file>
									<type>xml</type>
									<classifier>serviceMetadata</classifier>
								</artifact>
								<artifact>
									<file>src/main/resources/serviceSecurityMetadata.xml</file>
									<type>xml</type>
									<classifier>serviceSecurityMetadata</classifier>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

